@media screen and (max-width: 1080px)
  #article
    width: 92%
    padding: 15px 4%
    min-height: 80vh

  .extra
    display: none


@media screen and (min-width: 1080px)
  #article
    width: 70%
    padding: 20px 10% 15px 20%
    min-height: 80vh

  .content
    width: calc(100% - 300px)
    float: left
    padding-right: 20px
    border-right: 1px solid #ddd

  .extra
    width: 260px
    float: right

  .extra hr
    border-style: none
    border-top: 1px solid #ddd

  .helper
    clear: both

#article .content li
  margin: 8px 0 0 32px

#article .content ul
  margin: 0 0 8px
  padding: 0px

#article .content img
  margin: 12px 0

#article .content a
  color: #4ea1db

#article .content a:visited
  color: #6795b5

#article p
  line-height: 3vmin


