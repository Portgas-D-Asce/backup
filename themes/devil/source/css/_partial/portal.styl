#portal
  width: 100%
  height: 100%
  background: url(bg-url) no-repeat right top
  background-size: cover

.container
  width: 340px
  margin: 0 auto
  text-align: center
  position: relative
  top: 50%
  transform: translateY(-50%)
  color: white
  
.logo
  width: 11vmin
  height: 11vmin
  border-radius: 50%
  background: url(logo-url) center #000
  background-size: cover

.pic
  background: url(bubble-url)
  background-size: cover
  overflow: hidden



.nav
  position: absolute
  top: 40px
  right: 20px
  
.nav-item
  float: left
  list-style-type:none
  padding: 10px
  height: 20px
  overflow: hidden

.nav-item:hover
  height: auto
  overflow: auto
  

.nav-item>dl
  background-color: white

.nav-item-item
  margin-left: 0
