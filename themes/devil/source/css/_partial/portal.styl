#portal
  width: 100%
  height: 100%
  background: url(bg-url) no-repeat right top
  background-size: cover

.container
  width: 950px
  margin: 0 auto
  text-align: center
  position: relative
  top: 50%
  transform: translateY(-50%)
  color: white

.container > h1
  font-style: italic
  
.logo
  width: 11vmin
  height: 11vmin
  border-radius: 50%
  background: url(logo-url) center #000
  background-size: cover

::-webkit-scrollbar
  display: none

.nav
  height: 100px
  margin: 0
  padding: 20px 0px
  
.nav-item
  float: left
  width: 25%
  height: 40px
  overflow-y: hidden

.nav-item:hover
  height: auto
  overflow: auto
  
.nav-item-name
  font-weight: bold
  font-size: 32px
  color: white
  font-style: italic

.nav-item>dl
  background-color: rgba(255, 255, 255, 0.9)
  border-radius: 2px
  max-height: 300px
  overflow: auto

.nav-item-item
  margin-left: 0
  line-height: 36px
  padding: 3px 15px
  

.nav-item-item:hover
  background-color: #ccc

.nav-item-item > a
  color: #000
  font-size: 20px
  overflow: hidden
  white-space: nowrap
  text-overflow: ellipsis
